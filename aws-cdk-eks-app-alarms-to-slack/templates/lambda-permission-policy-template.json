{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": "arn:aws:logs:{{CAP_CLUSTER_REGION}}:{{CAP_ACCOUNT_ID}}:log-group:/aws/lambda/{{FUNCTION_NAME}}"
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:{{CAP_CLUSTER_REGION}}:{{CAP_ACCOUNT_ID}}:log-group:/aws/lambda/{{FUNCTION_NAME}}:*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": "kms:Decrypt",
            "Resource": "arn:aws:kms:{{CAP_CLUSTER_REGION}}:{{CAP_ACCOUNT_ID}}:key/{{KEY_ID}}",
            "Condition": {
            "StringEquals": {
                "kms:EncryptionContext:LambdaFunctionName": "{{FUNCTION_NAME}}"
            }
            }
        }
    ]
}
